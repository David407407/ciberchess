---
import Question from '../../components/Question';
import Layout from '../../layouts/Layout.astro';
import Image from 'astro/components/Image.astro';
import Troya from '../../imgs/caballo-de-troya.png'

const virusTroyano = [
  { question: "¿Qué es un virus troyano?", answer: "Es un malware que se disfraza de software legítimo para engañar al usuario." },
  { question: "¿Cómo se propaga un troyano?", answer: "A través de descargas, correos o sitios web maliciosos." },
  { question: "¿Qué hace un troyano en un dispositivo?", answer: "Roba datos, instala malware o controla el dispositivo." },
  { question: "¿Cómo puedes prevenir infecciones de troyanos?", answer: "Evita descargas de fuentes no confiables y usa antivirus." },
  { question: "¿Qué hacer si detectas un troyano?", answer: "Ejecuta un análisis completo con un antivirus actualizado." }
];

---

<Layout>
	<main class="w-3/5 rounded-lg mx-auto bg-gray-700 py-10 px-16 flex flex-col gap-5">
		<div class="flex flex-col-reverse lg:flex-row justify-center lg:justify-between items-center">
			<div>
				<h1 class="text-3xl lg:text-5xl font-bold mb-4 lucidity"> 
					Troyano
				</h1>
				<div class="bg-slate-900 max-w-44 mx-auto lg:mx-0 rounded-lg px-4 py-3">
					<h2 class="text-2xl faculty font-semibold text-center">Pregunta</h2>
				</div>
			</div>
			<div>
				<Image class="w-36 xl:w-44" src={Troya} alt="">
			</div>
		</div>

		<Question client:only questions={virusTroyano} />
	</main>
</Layout>

