---
import Question from '../../components/Question';
import Layout from '../../layouts/Layout.astro';

const proteccionRoboContraseñas = [
  {
    question: "¿Qué es el robo de contraseñas?",
    answer: "Es el acceso no autorizado a claves personales."
  },
  {
    question: "¿Cómo pueden robarte una contraseña?",
    answer: "Mediante phishing, malware o ataques de fuerza bruta."
  },
  {
    question: "¿Qué medidas básicas protegen tus contraseñas?",
    answer: "Usar contraseñas únicas y habilitar autenticación en dos pasos."
  },
  {
    question: "¿Cómo evitar caer en ataques de phishing?",
    answer: "No hagas clic en enlaces de correos sospechosos."
  },
  {
    question: "¿Qué hacer si sospechas que robaron tu contraseña?",
    answer: "Cámbiala de inmediato y revisa tus cuentas."
  }
];

---

<Layout>
	<main class="w-3/5 rounded-lg mx-auto bg-gray-700 py-10 px-16 flex flex-col gap-5">
		<div class="flex justify-between items-center">
			<div>
				<h1 class="text-5xl font-bold mb-4 lucidity"> 
					DDoS
				</h1>
				<div class="bg-slate-900 max-w-44 rounded-lg px-4 py-3">
					<h2 class="text-2xl faculty font-semibold text-center">Pregunta</h2>
				</div>
			</div>
			<div class="">
				<img class="w-44" src="../imgs/arma.png" alt="">
			</div>
		</div>

		<Question client:only questions={proteccionRoboContraseñas} />
	</main>
</Layout>

